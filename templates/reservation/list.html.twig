{% extends 'admin_connected_base.html.twig' %}

{% block title %}Liste des historiques de reservations !
{% endblock %}

{% block body %}
	<div class="bg-light p-3">
		<h3>Liste des historiques de reservations :
		</h3>
	</div>
	<div class="ml-2 mt-2">
		<table class="table table-striped" style="color: #1d1e20;">
			<thead>
				<tr>
					<th scope="col" colspan="3">date de reservation</th>
					<th scope="col">Heure de reservation</th>
					<th scope="col">Instructeur</th>
					<th scope="col">Status</th>
				</tr>
			</thead>
			<tbody>
				{% for order in orders %}
					<tr>
						<td colspan="2">{{order.product.title }}</td>
						<td>{{order.adresse }}</td>
						<td colspan="2">{{order.user.firstName}}
							~
							{{order.user.lastName}}</td>
						<td>en attente</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>
		<div class="navigation">
			{{ knp_pagination_render(orders) }}
		</div>

	</div>
{% endblock %}
